{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "Authors"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "socialMedias": {
      "type": "component",
      "repeatable": true,
      "component": "page.social-medias",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true,
      "maxLength": 400
    }
  }
}
